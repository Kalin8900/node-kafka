{
  "name": "node-kafka",
  "version": "0.0.1",
  "description": "TBA",
  "main": "main.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --coverage --testMatch \"**/src/**/*.spec.ts\"",
    "test:integration": "jest --testMatch \"**/test/**/*.integration.spec.ts\" --runInBand",
    "prebuild": "npm run clean",
    "build": "tsc",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "clean": "rimraf dist",
    "lint": "prettier --ignore-path \"../.gitignore\" --check \"{src,tests}/**/*.{ts,json}\" && eslint \"src/**/*.ts\"",
    "lint:fix": "prettier --ignore-path \"../.gitignore\" --write \"{src,tests}/**/*.{ts,json}\" && eslint \"src/**/*.ts\" --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Kalin8900/node-kafka.git"
  },
  "author": "Micha≈Ç Kalinowski, Kordian Grabowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trisquareeu/kafkit/issues"
  },
  "homepage": "https://github.com/trisquareeu/kafkit#readme",
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@testcontainers/kafka": "10.3.2",
    "@types/jest": "29.5.11",
    "@types/lz4": "0.6.4",
    "@types/mitm": "1.3.8",
    "@types/node": "20.10.4",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.14.0",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.0.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "mitm": "1.7.2",
    "prettier": "3.1.1",
    "prettier-eslint": "16.1.2",
    "rimraf": "5.0.5",
    "testcontainers": "10.3.2",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@mongodb-js/zstd": "1.2.0",
    "crc-32": "1.2.2",
    "lz4": "0.6.5",
    "reflect-metadata": "0.1.13",
    "simple-zstd": "1.4.2",
    "snappy": "7.2.2"
  }
}
